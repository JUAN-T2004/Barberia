<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bordes redondeados con un radio mayor -->
    <corners android:radius="30dp" />

    <!-- Sombreado para resaltar el EditText -->
    <gradient
        android:startColor="#E0E0E0"
        android:centerColor="#F5F5F5"
        android:endColor="@android:color/holo_red_light"
        android:angle="90" />

    <!-- Borde exterior con un degradado -->
    <stroke
        android:width="7dp"
        android:color="@android:color/holo_red_light"
        android:startColor="@android:color/holo_red_light"
        android:endColor="@android:color/holo_red_light"
        android:angle="90" />

    <!-- Borde interior para dar la sensaciÃ³n de relieve -->
    <stroke
        android:width="2dp"
        android:color="@android:color/holo_red_light"
        android:angle="90" />

    <!-- Padding para que el texto no quede tan pegado al borde -->
    <padding
        android:left="20dp"
        android:right="8dp"
        android:top="11dp"
        android:bottom="11dp" />

</shape>
